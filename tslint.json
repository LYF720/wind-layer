{
  "extends": [
    "tslint:latest",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ],
    "no-empty": false,
    "no-console": false,
    "prefer-for-of": false,
    "no-unused-expression": false,
    "object-literal-sort-keys": false,
    "no-implicit-dependencies": false,
    "no-submodule-imports": false
  },
  "include": [
    "packages/**"
  ],
  "exclude": [
    "node_modules"
  ]
}
