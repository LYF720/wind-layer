{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "tsc": "tsc",
    "prebuild": "run-p tsc lint",
    "clean": "lerna run --parallel clean",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "dev": "lerna run --parallel dev",
    "dev:demo": "rollup -wm -c rollup/demo.config.js",
    "build": "lerna run --parallel build",
    "build:declarations": "lerna run --parallel tsc",
    "postbuild": "yarn build:declarations",
    "prerelease": "yarn build",
    "bootstrap": "lerna bootstrap",
    "test": "jest --env=node --colors --coverage test",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "travis-deploy-once": "travis-deploy-once",
    "precommit": "lint-staged",
    "publish-packages": "lerna publish --force-publish"
  },
  "lint-staged": {
    "*.{js,ts/tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "ol": "^6.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/plugin-external-helpers": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-transform-proto-to-assign": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@babel/types": "^7.7.4",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-inline-import": "^3.0.0",
    "coveralls": "^3.0.9",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.1.0",
    "rimraf": "^3.0.0",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rollup": "^1.27.14",
    "@rollup/plugin-commonjs": "^11.0.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-glslify": "^1.1.3",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-typescript2": "^0.25.3",
    "rollup-plugin-uglify": "^6.0.3",
    "semantic-release": "^15.13.31",
    "stylelint": "^12.0.0",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.2.0",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typedoc": "^0.15.3",
    "typescript": "^3.7.3"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint",
      "pre-push": "yarn run test"
    }
  },
  "license": "MIT"
}
